<Window x:Class="Hotel.Receptionist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Background="#7395AE"
        Icon="Res/img/Logo.jpg"
        FontFamily="Bahnschrift"
        Title="Receptionist" Height="450" Width="800">
    <Grid Margin="10" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Ресепшн" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="25" Grid.Row="0"  Grid.Column="0"  HorizontalAlignment="Center" Margin="0,10,0,10" Foreground="GhostWhite"/>
        <Button x:Name="BTNback" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Style="{StaticResource BTNback}" Width="50" Height="50" Click="BTNback_Click"/>


        <GroupBox Header="Список бронирований"  Background="#7FE1D7F7" Height="Auto" Padding="1" FontSize="16" VerticalAlignment="Top" Margin="0,30,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Поиск гостя: "  Grid.Row="0" Grid.Column="0" Margin="0,10"/>
                <TextBox x:Name="TBsearchGuest" Grid.Row="0" Grid.Column="1" Height="25" TextChanged="TBsearchGuest_TextChanged"/>

                <DataGrid x:Name="DGguests" Grid.Row="1" IsReadOnly="True" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4" Height="Auto" Width="500" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding Гость1.Фамилия}"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Гость1.Имя}"/>
                        <DataGridTextColumn Header="Отчество" Binding="{Binding Гость1.Отчество}"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Гость1.Номер_телефона}"/>
                        <DataGridTextColumn Header="Номер" Binding="{Binding Номер.Номер1}"/>
                        <DataGridTextColumn Header="Статус заселения" Binding="{Binding Гость1.Статус_заселения}"/>
                        <DataGridTextColumn Header="Дата начала заселения" Binding="{Binding Дата_начала_бронирования, StringFormat='dd.MM.yyyy'}"/>
                        <DataGridTextColumn Header="Дата конца заселения" Binding="{Binding Дата_конца_бронирования, StringFormat='dd.MM.yyyy'}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="BTNstatys_CheckIn" Style="{StaticResource BTNstatys}" Grid.Row="1" Grid.Column="2" Height="35" Click="BTNstatys_Click" Margin="5,0,0,0"/>
                <Button x:Name="BTNstatys_CheckOut" Style="{StaticResource BTNstatys_Check_out}" Grid.Row="3" Grid.Column="2" Height="35" Click="BTNstatys_CheckOut_Click" Margin="5,10,0,10"/>
                <Button Content="Удаление брони" x:Name="BTNdelBooking" Style="{StaticResource BTNdelBooking}" Grid.Row="4" Grid.Column="2" Height="35" Click="BTNdelBooking_Click" Margin="5,0,0,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
