<Window x:Class="Hotel.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        FontFamily="Bahnschrift"
        mc:Ignorable="d"
        Background="#7395AE"
        Icon="Res/img/Logo.jpg"
        Title="Admin" Height="580" Width="800">
    <Grid>
        <Button x:Name="BTNback" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="15" HorizontalAlignment="Right" Style="{StaticResource BTNback}" Width="50" Height="50" Click="BTNback_Click"/>
        
    <Grid Margin="10" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Администратор"  FontSize="24" FontWeight="Bold" Grid.Row="0"  Grid.Column="0"  HorizontalAlignment="Center" Margin="0,10,0,10" Foreground="GhostWhite"/>

        <TabControl Grid.Row="1" HorizontalAlignment="Center" Width="Auto" Background="#7FE1D7F7">
            <TabItem Header="Добавить нового сотрудника" Height="30">
                <GroupBox Header="Новый сотрудник"   Padding="1" FontSize="14" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,30,0,0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Поля ввода -->
                        <TextBlock Text="Фамилия" Grid.Row="0" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="TBsurname" Grid.Row="0" Grid.Column="1" Height="25" Style="{StaticResource TBbooking}"/>

                        <TextBlock Text="Имя" Grid.Row="1" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="TBname" Grid.Row="1" Grid.Column="1" Height="25" Style="{StaticResource TBbooking}"/>

                        <TextBlock Text="Отчество" Grid.Row="2" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="TBpatronynic" Grid.Row="2" Grid.Column="1" Height="25" Style="{StaticResource TBbooking}"/>

                        <TextBlock Text="Телефон" Grid.Row="3" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="TBnumPhone" Grid.Row="3" Grid.Column="1" Height="25" Style="{StaticResource TBbooking}"/>

                        <TextBlock Text="Email" Grid.Row="4" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="TBemail" Grid.Row="4" Grid.Column="1" Height="25" Style="{StaticResource TBbooking}"/>

                        <TextBlock Text="Логин" Grid.Row="5" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="TBlogin" Grid.Row="5" Grid.Column="1" Height="25" Style="{StaticResource TBbooking}"/>

                        <TextBlock Text="Пароль" Grid.Row="6" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="TBpassword" Grid.Row="6" Grid.Column="1" Height="25" Style="{StaticResource TBbooking}"/>

                        <TextBlock Text="Роль" Grid.Row="7" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="CBrole" Grid.Row="7" Grid.Column="1" Height="25" Width="220"/>

                        <TextBlock Text="Дата рождения" Grid.Row="8" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <DatePicker x:Name="DPborn" Grid.Row="8" Grid.Column="1" Height="25" Width="220" Margin="0,5"/>

                            <Button x:Name="BTNaddEmployee" Grid.Row="9" Grid.Column="0" FontSize="18" Grid.ColumnSpan="2" Height="35" Content="Добавить гостя" Style="{StaticResource BTNemployee}" Margin="0,10" Click="BTNaddEmployee_Click" />
                    </Grid>
                </GroupBox>
            </TabItem>
            <TabItem Header="Удалить сотрудника" Height="30">
                <GroupBox Header="Сотрудники" Padding="1" FontSize="14" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,30,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <DataGrid AutoGenerateColumns="False" Height="Auto" x:Name="DGEmployee" Grid.Row="0" Grid.Column="0" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Фамилия" Binding="{Binding Фамилия}"/>
                                <DataGridTextColumn Header="Имя" Binding="{Binding Имя}"/>
                                <DataGridTextColumn Header="Отчество" Binding="{Binding Отчество}"/>
                                <DataGridTextColumn Header="Телефон" Binding="{Binding Телефон}"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                                <DataGridTextColumn Header="Роль" Binding="{Binding Роли}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button HorizontalAlignment="Center" x:Name="BTNdelEmployee" Grid.Row="1" Grid.Column="0" Style="{StaticResource BTNdelEmployee}" Height="35" Click="BTNdelEmployee_Click"/>
                    </Grid>
                </GroupBox>
            </TabItem>
        </TabControl>


    </Grid>
    </Grid>
</Window>
